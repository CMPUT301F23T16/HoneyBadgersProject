<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200sp">



    <Spinner
        android:id="@+id/add_item_tag_spinner"
        android:layout_width="350sp"
        android:layout_height="45sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="21dp"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/create_tag"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="321dp"
        android:layout_marginTop="28dp"
        android:text="Create"
        android:background="@color/dark_grey"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_item_tag_spinner" />

    <EditText
        android:id="@+id/tag_keyword"
        android:layout_width="0dp"
        android:layout_height="50sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:hint="  Tag Keyword"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/add_item_tag_spinner"
        app:layout_constraintStart_toEndOf="@+id/create_tag"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/add_tag_button"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/add_icon"
        app:layout_constraintTop_toBottomOf="@+id/add_item_tag_spinner"
        app:layout_constraintStart_toEndOf="@+id/tag_keyword" />

</androidx.constraintlayout.widget.ConstraintLayout>

